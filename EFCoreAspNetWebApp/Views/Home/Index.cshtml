@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<ServiceLayer.DTOs.BookDto>
@using ServiceLayer.Extensions


<div class="text-center">
    <h1 class="display-4">All Books</h1>
</div>

@foreach (var item in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">&nbsp;</h6>
            <p class="card-text">@item.Description.ConcatStr(100)</p>
            <a href="#" class="card-link">Book link</a>
            <a href="#" class="card-link">Image link</a>
        </div>
    </div>

    <div>
        
        <hr />
    </div>
}

